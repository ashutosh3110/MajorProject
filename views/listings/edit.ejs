<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your listing</h3>
            <form method="POST" action="/listing/<%= editListing._id %>?_method=PUT" novalidate
                class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-lable">Title</lable>
                    <input name="listing[title]" value="<%= editListing.title %>" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-lable">Description</lable>
                    <textarea name="listing[description]" class="form-control"
                        required><%= editListing.description %></textarea>
                    <div class="invalid-feedback">
                        Plz enter a short description..
                    </div>
                </div>
                Original Listing Image
                <div class="mb-3">
                <img src="<%= originalImageUrl %>" height="200px" width="300px"/>
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-lable">Upload New Image</lable>
                    <input name="listing[image][url]"  type="file"
                        class="form-control" >
                    
                </div>
                <div class="row ">
                    <div class="mb-3 col-md-4">

                        <lable for="price" class="form-lable">Price</lable>
                        <input name="listing[price]" value="<%= editListing.price %>" type="number" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <div class=" mb-3 col-md-3">
                        <lable for="location" class="form-lable">Country</lable>
                        <input name="listing[location]" value="<%= editListing.location %>" type="text"
                            class="form-control" required>
                        <div class="invalid-feedback">
                            Country should be valid
                        </div>
                    </div>
                </div>



                <div class="mb-3">
                    <lable for="location" class="form-lable">Location</lable>
                    <input name="listing[country]" value="<%= editListing.country %>" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Location should be valid
                    </div>
                </div>

                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>