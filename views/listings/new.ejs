<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-7 offset-2">

            <h3>Create a new listing</h3>


            <form method="POST" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" placeholder="Add a catcy title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Plz enter a short description..
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Image link</label>
                    <input name="image" placeholder="Enter image  link" type="file" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3  col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]" placeholder="1200" class="form-control">
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="location" class="form-lable">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Country should be valid
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" placeholder="Harda, M.P." class="form-control" required>
                    <div class="invalid-feedback">
                        Location should be valid
                    </div>
                </div>
                <label for="category">Select Category:</label>
  <select name="category" id="category" required>
    <option value="">--Choose--</option>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Iconic Cities">Iconic Cities</option>
    <option value="Mountains">Mountains</option>
    <option value="Castels">Castels</option>
    <option value="Artics">Artics</option>
    <option value="Camping">Camping</option>
    <option value="Farms">Farms</option>
    <option value="Amazing Pools">Amazing Pools</option>
  </select>


                <br><br>


                <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
                <br><br><br> 
            </form>
        </div>
    </div>