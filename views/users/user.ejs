<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
       
        <div class="col-6 offset-2">
            <h1>SignUp on wonderlust</h1>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <lable for="username" class="form-lable">Username</lable>
                    <input name="username" id="username" placeholder="Add a catcy title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="email" class="form-lable">Email</lable>
                    <input name="email" id="email" placeholder="Add a catcy title" type="text" class="form-control"
                        required>
                    
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-lable">Password</lable>
                    <input name="password" id="password" placeholder="Add a catcy title" type="password" class="form-control"
                        required>
                    
                </div>
                <div class="mb-3">
                    <label for="role" class="form-label">Role</label>
                    <select name="role" id="role" class="form-control">
                        <option value="user">User</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>

                    <button class="btn btn-success">SignUp</button>

            </form>
            </div>
            </div>